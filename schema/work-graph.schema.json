{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "IssueForge Work Graph",
  "type": "object",
  "required": ["project", "items"],
  "properties": {
    "project": { "type": "string" },
    "items": {
      "type": "array",
      "items": { "$ref": "#/definitions/item" }
    }
  },
  "definitions": {
    "item": {
      "type": "object",
      "required": ["type", "summary"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["Epic", "Story", "Spike", "Bug", "Task"]
        },
        "summary": { "type": "string" },
        "description": { "type": "string" },
        "labels": {
          "type": "array",
          "items": { "type": "string" }
        },
        "children": {
          "type": "array",
          "items": { "$ref": "#/definitions/item" }
        },
        "subtasks": {
          "type": "array",
          "items": { "$ref": "#/definitions/subtask" }
        }
      },
      "allOf": [
        {
          "if": { "properties": { "type": { "const": "Epic" } } },
          "then": { "not": { "required": ["subtasks"] } }
        }
      ]
    },
    "subtask": {
      "type": "object",
      "required": ["summary"],
      "properties": {
        "summary": { "type": "string" },
        "blocks_parent": {
          "type": "boolean",
          "default": false
        }
      }
    }
  }
}
